{
  "name": "youtuberwordfinderbot",
  "version": "1.0.0",
  "description": "Finds clips of youtubers saying certain words",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "npm run build-react",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-react": "cd view && npm start",
    "build-react": "cd view && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EthanSK/YoutuberWordFinderBot.git"
  },
  "author": "Ethan Sarif-Kattan",
  "bugs": {
    "url": "https://github.com/EthanSK/YoutuberWordFinderBot/issues"
  },
  "homepage": "https://github.com/EthanSK/YoutuberWordFinderBot#readme",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/youtube-dl": "^1.12.2",
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.19",
    "dotenv": "^8.0.0",
    "youtube-dl": "^2.0.1"
  },
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "com.ethansk.youtuberwordfinderbot",
    "productName": "Youtuber Word Finder Bot",
    "copyright": "Copyright Â© 2019 ${author}",
    "asar": true,
    "asarUnpack": "node_modules/puppeteer/.local-chromium/**/*",
    "directories": {
      "buildResources": "resources",
      "output": "executables"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true
    },
    "win": {},
    "linux": {
      "category": "ImageProcessing",
      "icon": "512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
